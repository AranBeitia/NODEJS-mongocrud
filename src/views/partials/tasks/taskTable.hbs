{{#if tasks}}
	<table class='table table-bordered table-hover table-dark'>
		<thead>
			<tr>
				<th>N.</th>
				<th>Title</th>
				<th>Description</th>
				<th>Operations</th>
			</tr>
		</thead>
		<tbody>
			{{#each tasks}}
				<tr>
					<td>{{@index}}</td>
					<td>{{title}}</td>
					<td>{{description}}</td>
					<td>
						<a href='/tasks/{{_id}}/toggleDone' class='btn btn-success'>
							{{#if done}}Done{{else}}Undone{{/if}}
						</a>
						<a href='/tasks/{{_id}}/edit' class='btn btn-info'>edit</a>
						<a href='/tasks/{{_id}}/delete' class='btn btn-danger'>delete</a>
					</td>
				</tr>

			{{/each}}
		</tbody>
	</table>
{{else}}
	<div>
		<h1 class='text-center'>no tasks</h1>
		<img src='' alt='' />
	</div>
{{/if}}