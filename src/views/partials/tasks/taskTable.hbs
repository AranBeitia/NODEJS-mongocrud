<table>
	<thead>
		<tr>
			<th>N.</th>
			<th>Title</th>
			<th>Description</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		{{#each tasks}}
			<tr>
				<td>{{@index}}</td>
				<td>{{title}}</td>
				<td>{{description}}</td>
				<td>
					<a href='/tasks/{{_id}}/toggleDone'>
						{{#if done}}Done{{else}}Undone{{/if}}
					</a>
					<a href='/tasks/{{_id}}/edit'>edit</a>
					<a href='/tasks/{{_id}}/delete'>delete</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>