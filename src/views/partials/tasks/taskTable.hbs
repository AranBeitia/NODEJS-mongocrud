<table>
	<thead>
		<tr>
			<th>N.</th>
			<th>Title</th>
			<th>Description</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		{{#each tasks}}
			<tr>
				<td>{{@index}}</td>
				<td>{{title}}</td>
				<td>{{description}}</td>
				<td>
					<a href='/toggleDone/{{_id}}'>
						{{#if done}}Undone{{else}}Done{{/if}}
					</a>
					<a href='/edit/{{_id}}'>edit</a>
					<a href='/delete/{{_id}}'>delete</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>